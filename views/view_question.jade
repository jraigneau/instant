script
  $(document).ready(function(){
        // Button
        $("#answer_button").click(function(event){
          event.preventDefault();
          $('#answer_form').show('fast');
          $('#author').focus();
        });
        // Button
        $("#answer_link").click(function(event){
          event.preventDefault();
          $('#answer_form').show('fast');
          $('#author').focus();
        });

    });


.content
  section
    .row
      - if (flash.error != null){
        .span16
          .alert-message.error
            = flash.error
      -} else if (flash.success != null){
        .span16
          .alert-message.success
            = flash.success
      -}


      .span12
        h2= question.body
      .span4
        h5 par #{question.author}
        p partagé le #{question.date.getDate()}/#{question.date.getMonth()+1}/#{question.date.getFullYear()}
        - if(question.votes<1)
          p Aucun vote - <a href='/bonheur/#{question._id}/vote'>Voter</a>
        - else if(question.votes<2)
          p Un vote - <a href='/bonheur/#{question._id}/vote'>Voter</a>
        - else
          p #{question.votes} votes - <a href='/bonheur/#{question._id}/vote'>Voter</a>
        a(class= 'btn primary', href= '#', id='answer_button') Commenter
  <br/>
  <br/>
  section(id='answer_form', style='display:none')
    .row
      .span12
        form(action="/bonheur/#{question._id}/commentaire", method="post")
          .clearfix
            .input1
              input(class='span12', name='comment[author]', id='author', style='margin-left:0px;font-size:14px;')
          .clearfix
            .input1
              textarea(class='span12', name='comment[text]', id='answer', rows='6', style='margin-left:0px;font-size:14px;')
          .clearfix
            <input type="hidden" name="csrf" value=#{csrf}>

          .actions
            input(type='submit', class="btn primary", value="Commenter le bonheur !")
            &nbsp;
            button(type='reset', class='btn') Effacer
      .span4
        p N'oubliez pas de dire qui vous êtes !
        <br/>
        p Rien de tel qu'un commentaire créatif, drôle, imaginatif, futé, original, inventif, insolite, malin, surprenant pour donner du sens !



  section
    .page-header
      h3 Les commentaires
    .row
      if(question.comments.length==0)
        .span16
          p Aucune commentaire pour l'instant - vite aidez nous à <a href="#" id='answer_link'>commenter</a> !
      else 
        each answer in question.comments
          .span12
            h4= answer.body
          .span4
            h5 par #{answer.author}
            p commenté le #{answer.date.getDate()}/#{answer.date.getMonth()+1}/#{answer.date.getFullYear()}



