if (flash.error != null)
  .row
    .span16
      .alert-message.error
        = flash.error
else if (flash.success != null)
  .row
    .span16
      .alert-message.success
        = flash.success


.hero-unit
  h1 Partagez vos bonheurs !
  <br/>
  p Avez vous envie de partager un moment de bonheur, un de ces instants où vous vous êtes sentis profondément heureux et apaisés ?
  p Partagez votre bonheur au sein de la communauté des gens heureux et savourez ceux déjà donnés !
  <br/>
  a(class= 'btn primary large', href= '/bonheur') Partager un instant de bonheur &raquo;

.row
  .span8
    h2 Derniers instants de bonheur
    each bonheur in bonheurs
      p <a href="/bonheur/#{bonheur._id}/show">#{bonheur.body}</a>
    p
      a(class='btn',href='/bonheur/list') Lire la suite &raquo;

  .span8
    h2 Derniers commentaires
    each comment in comments
      p <a href="/bonheur/#{comment.value.bonheur_id}/show">#{comment.value.comment_body}</a>
    p
      a(class='btn',href='/bonheur/list') Lire la suite &raquo;

